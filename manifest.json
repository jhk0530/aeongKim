{
  "manifest_version": 3,
  "name": "Medium Article Beautifier",
  "version": "1.0.1",
  "description": "Change style on jhk0530's medium",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png",
    "192": "icons/icon-192.png",
    "512": "icons/icon-512.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/@jhk0530/*",
        "https://jhk0530.medium.com/*",
        "https://medium.com/p/*"
      ],
      "js": ["popup.js"]
    }
  ]
}
